<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<include file="struts-goods.xml"></include>
	<include file="struts-goodsManage.xml"></include>

	<!--  -->
	<constant name="struts.multipart.saveDir" value="/img"/>

	<constant name="struts.action.extension" value="do" />
	<!-- 设置Web应用的默认编码集为UTF-8 -->
	<constant name="struts.i18n.encoding" value="UTF-8"/>
	<!-- 设置Struts2默认的ObjectFactory为spring -->
	<constant name="struts.objectFactory" value="spring" />
	<!-- 设置Struts2应用是否处于开发模式，通常在开发调试阶段设为true,正式上线后可设为false -->
	<constant name="struts.devMode" value="true" />
	<!-- 设置Struts2的默认主题为simple -->
	<constant name="struts.ui.theme" value="simple" />
	
	<!-- 定义一个名为 qfq 的包，继承 Struts 2 的默认包 -->
    <package name="qfq" extends="struts-default">
		<!-- 配置自定义拦截器LoginedCheckInterceptor -->
			    
    
		<!-- 定义全局result -->
		<global-results>
			<!-- 定义名为exception的全局result -->
		    <result name="exception">/exception.jsp</result>
		    <result name="tologin">/index.jsp</result>
		</global-results>

		<!-- 定义全局异常映射 -->
		<global-exception-mappings>
			<!-- 捕捉到Exception异常(所有异常)时跳转到exception所命名的视图上 -->
			<exception-mapping exception="java.lang.Exception" result="exception"/>
		</global-exception-mappings>	
    </package>
    
     <package name="main" extends="qfq">
		<action name="*_*" class="com.qfq.action.{1}Action" method="{2}">
			<result name="input" >/jsp/index.jsp</result>
			<result name="regist" >/jsp/user/register.jsp</result>
			<result name="success" type="redirectAction">showGoods</result>
			<result name="failed" >/jsp/index.jsp</result>
			<result name="order" >/jsp/order/order.jsp</result>
			<result name="detil" >/jsp/order/orderdetil.jsp</result>
			<result name="pay" >/jsp/order/pay.jsp</result>
			<result name="msg" >/jsp/msg.jsp</result>
			<result name="ordermag" >/jsp/orderManager/ordermag.jsp</result>
			<result name="orderdetail" >/jsp/orderManager/orderdetail.jsp</result>
		</action>
		
	</package>
    
</struts>
